(rule
 (targets types_j.ml
          types_j.mli)
 (deps    types.atd)
 (action  (run atdgen -j -j-std %{deps})))

(rule
 (targets types_t.ml
          types_t.mli)
 (deps    types.atd)
 (action  (run atdgen -t %{deps})))

(library (name Refmterr)
    (public_name refmterr.lib)
    (flags (:standard -warn-error -a-27-9))
    (libraries atdgen re.pcre unix pastel.lib reason-native-common))
